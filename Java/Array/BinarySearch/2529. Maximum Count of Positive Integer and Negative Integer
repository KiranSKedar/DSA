https://leetcode.com/problems/maximum-count-of-positive-integer-and-negative-integer/description/

class Solution {
    public int maximumCount(int[] nums) {

        int positive=(int)Arrays.stream(nums).filter(n->n>0).count();

        int negative =(int) Arrays.stream(nums).filter(n->n<0).count();

        return Math.max(positive,negative);
        
    }
}



***************************************************************************************************************************

class Solution {
    public int maximumCount(int[] nums) {


        int n=nums.length;
        int low=0,high=n-1;

        int last_neg=-1, first_pos=-1;

        while(low<=high){
            int mid=low+(high-low)/2;

            if(nums[mid]<0){
                last_neg=mid;
                low=mid+1;
            }
            else if(nums[mid]>=0){
                high=mid-1;
            }
        }
        low=0;high=n-1;
        while(low<=high){
            int mid=low+(high-low)/2;

            if(nums[mid]>0){
                first_pos=mid;
                high=mid-1;
            }
            else if(nums[mid]<=0){
                low=mid+1;
            }
        }

        if(first_pos==-1 && last_neg==-1) return 0;
        if (last_neg == -1) return n - first_pos;
        if (first_pos == -1) return last_neg + 1;
        
        return Math.max(last_neg+1,(n-first_pos));
    }
}

